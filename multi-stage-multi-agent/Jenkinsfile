pipeline {
  agent none
  stages {
    stage('Checkout') {
      steps {
        // Corrected git step syntax
        git(
          credentialsId: 'github-creds',
          url: 'https://github.com/etechteam6/jenkins-folder.git',
          branch: 'master'  // Ensure this is the correct branch name
        )
      }
    }

    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
      }
    }

    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }

    stage('Integration test') {
      agent {
        docker { image 'adoptopenjdk:11-jdk-hotspot' }
      }
      steps {
        sh 'echo "Running integration tests"'
        /*
         * Example test commands, replace with actual test commands for your environment.
         * Ensure all software needed for the tests is installed in the Docker image.
         */
        sh 'java -version'
        sh 'node --version'  // Assuming Node.js is also installed on this image for simplicity
      }
    }
  }
}
